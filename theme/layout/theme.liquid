<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">

  {% if settings.favicon_enable %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endif %}

  <title>
  {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &mdash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &mdash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &mdash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <meta name="theme-color" content="{{ settings.color_primary }}">

  {{ 'styles.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}

  {% comment %}
    If you store has customer accounts disabled, you can remove the following JS file
  {% endcomment %}
  {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% endif %}

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}">
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <div class="mobile-nav">
    <a class="icon-hamburger left" href="#" title="Menu">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </a>
    <a href="/cart" class="mobile-nav-cart"><svg class="mobile-nav-cart-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 17" enable-background="new 0 0 22 17"><path d="M4.3 0h-4.3l.5 1.4h2.8l4.2 10.9h10.5l.5-1.4h-10zM6.9 1.9l2.8 7.1h9.5l2.8-7.1h-15.1zm11.4 5.7h-7.6l-1.7-4.3h10.9l-1.6 4.3z"/><circle cx="10.2" cy="15.6" r="1.4"/><circle cx="15.6" cy="15.6" r="1.4"/></svg><span class="cart_numbers">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} / {{ cart.total_price | money }}</span></a>
  </div>
  <header class="site-header{% if settings.use_logo %} site-header--logo{% else %} site-header--text{% endif %}">
    <div class="wrap">
      <a href="/" title="{{ store.name | escape }}">
        {% if settings.use_logo %}
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}">
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
    </div>
  </header>
  <div class="wrap">
    <section class="content">
      {{ content_for_layout }}
    </section>
    <aside class="site-sidebar is-open">
      <a href="/cart" class="side-cart">
        <svg class="side-cart__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 17" enable-background="new 0 0 22 17"><path d="M4.3 0h-4.3l.5 1.4h2.8l4.2 10.9h10.5l.5-1.4h-10zM6.9 1.9l2.8 7.1h9.5l2.8-7.1h-15.1zm11.4 5.7h-7.6l-1.7-4.3h10.9l-1.6 4.3z"/><circle cx="10.2" cy="15.6" r="1.4"/><circle cx="15.6" cy="15.6" r="1.4"/></svg>
        <span class="side-cart__count">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}</span>
        <span class="side-cart__cost">{{ cart.total_price | money }}</span>
      </a>
      <div class="sidebar-menu-container">
        <h3 class="sidebar-menu-container__title">Shop</h3>
        <ul class="sidebar-menu">
          <li class="sidebar-menu__item"><a href="#">All Products</a></li>
          {% comment %}
            ToDo: Add setting to show the search form
          {% endcomment %}
          {% if true %}
            <li class="side_search">
              <form class="search-form" name="search" action="/products" method="get" accept-charset="utf8">
                <input class="search-form__input" id="search" name="search" type="text" autocomplete="off" />
                <label class="search-form__label" for="search">Search...</label>
              </form>
            </li>
          {% endif %}
          {% for i in (1..5) %}
            <li class="sidebar-menu__item"><a href="#">Collection {{ i }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% if settings.show_newest %}
        {% comment %}
        {% get 5 products from products.all order: 'newest' %}
          {% if products != blank %}
            <div class="side_pages">
              <h3>Newest Products</h3>
              <ul>
                {% for product in products %}
                  <li>{{ product | link_to }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endget %}
        {% endcomment %}
      {% endif %}
      {% if settings.show_top_selling %}
        {% comment %}
        {% get 5 products from products.all order: 'sales' %}
          {% if products != blank %}
            <div class="side_pages">
              <h3>Top Selling</h3>
              <ul>
                {% for product in products %}
                  <li>{{ product | link_to }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endget %}
        {% endcomment %}
      {% endif %}
      <div class="sidebar-menu-container">
        <h3 class="sidebar-menu-container__title">Pages</h3>
        <ul class="sidebar-menu">
          {% for i in (1..5) %}
            <li class="sidebar-menu__item"><a href="#">Page {{ i }}</a></li>
          {% endfor %}
          <li class="sidebar-menu__item"><a href="/contact" title="Contact">Contact</a></li>
        </ul>
      </div>
    </aside>
  </div>
  <footer class="site-footer">
    <div class="wrap">
      <div class="grid">
        <div class="grid__item large--one-half xlarge--one-half small--text-center medium--text-center large--text-left site-footer__about">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ powered_by_link }}
        </div>
        <div class="grid__item large--one-half xlarge--one-half small--text-center medium--text-center large--text-right">
          {% if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_tumblr_link != blank or settings.social_pinterest_link != blank %}
            {% comment %}
              Loop through the social network links
            {% endcomment %}
            {% include 'social-links' %}
          {% endif %}
        </div>
      </div>
    </div>
  </footer>
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js' | script_tag }}
  {{ 'script.js' | asset_url | script_tag }}
  {% if template contains 'product' %}
    <script async defer src="//assets.pinterest.com/js/pinit.js"></script>
  {% endif %}
  <script>
    $(function() {
      if ($('.flexslider').length) {
        $('.flexslider').flexslider({
          animation: "slide",
          customDirectionNav: $(".flex-nav a")
        });
      }
    });
  </script>
</body>
</html>
