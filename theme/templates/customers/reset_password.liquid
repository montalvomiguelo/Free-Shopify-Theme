<!-- /templates/customers/reset_password.liquid -->

<div class="page-content">

  <div class="form-vertical">
    {% form 'reset_customer_password' %}

      <h1>{{ 'customer.reset_password.title' | t }}</h1>

      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {{ form.errors | default_errors }}

      <div class="form-vertical__item">
        <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %}error{% endif %}">
      </div>

      <div class="form-vertical__item">
        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %}error{% endif %}">
      </div>

      <div class="form-vertical__item">
        <button type="submit" title="{{ 'customer.reset_password.submit' | t }}">{{ 'customer.reset_password.submit' | t }}</button>
      </div>

    {% endform %}
  </div>


</div>
